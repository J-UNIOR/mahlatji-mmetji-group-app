{
  "name": "mahlatji-mmetji-group",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:staging": "ng build --configuration development",
    "build:analyze": "ng build --stats-json && npx webpack-bundle-analyzer dist/mahlatji-mmetji-group/stats.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "test:coverage": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "test:prod": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "e2e": "ng e2e",
    "e2e:ci": "ng e2e --configuration=ci",
    "lint": "ng lint",
    "deploy": "ng build --base-href /mahlatji-mmetji-group-app/ && npx angular-cli-ghpages --dir=dist/mahlatji-mmetji-group/browser",
    "quick-deploy": "powershell -ExecutionPolicy Bypass -File deploy.ps1",
    "optimize:images": "node scripts/optimize-images.js",
    "preload:critical": "node scripts/preload-critical-resources.js",
    "test:optimizations": "node scripts/test-optimizations.js",
    "verify:all": "node scripts/verify-all-features.js",
    "test:accessibility": "node scripts/accessibility-audit.js",
    "verify:accessibility-panel": "node scripts/verify-accessibility-panel.js"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.7",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@angular/service-worker": "^20.2.1",
    "ngx-owl-carousel-o": "^20.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.1",
    "@angular/cli": "^20.1.1",
    "@angular/compiler-cli": "^20.1.0",
    "@angular/platform-browser-dynamic": "^20.1.2",
    "@types/jasmine": "~5.1.0",
    "angular-cli-ghpages": "^2.0.3",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "sharp": "^0.34.3",
    "typescript": "~5.8.2",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
